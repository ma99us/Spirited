<?xml version='1.0' encoding='utf-8'?>
<widget id="org.maggus.spirit" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SpiritedApp</name>
    <description>
        SpiritedApp application for Spirited API service.
    </description>
    <author email="ma99us@gmail.com" href="gerdov.com">
        -=MaGGuS=-
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="phonegap-version" value="cli-7.1.0" />
    <preference name="android-targetSdkVersion" value="28" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.3.3" />
    <!--<plugin name="cordova-plugin-media-capture" source="npm" spec="~1.2.0" />-->
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1.7" />
    <plugin name="cordova-plugin-device-orientation" source="npm" spec="~1.0.7" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.2.1" />
    <!--<plugin name="cordova-plugin-file" source="npm" spec="~6.0.1" />-->
    <!--<plugin name="cordova-plugin-file-transfer" source="npm" spec="~1.5.1" />-->
    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.2.1" />
    <plugin name="cordova-plugin-barcodescanner" source="npm" spec="~0.7.4" />
    <plugin name="cordova-plugin-geolocation" spec="~4.0.2" />
    <plugin name="cordova-plugin-camera" spec="~4.1.0"/>
    <plugin name="cordova.plugins.diagnostic" spec="~5.0.0" />
    <platform name="android">
        <icon density="hdpi" src="www/res/icon/android/drawable-hdpi-icon.png" />
        <splash density="port-hdpi" src="www/res/screen/android/drawable-port-hdpi-screen.png" />
    </platform>
    <platform name="ios">
        <icon height="58" platform="ios" src="www/res/icon/ios/icon-small@2x.png" width="58" />
        <splash height="960" platform="ios" src="www/res/screen/ios/Default@2x~iphone.png" width="640" />
    </platform>
    <platform name="wp8">
        <icon height="159" platform="wp8" src="www/res/icon/wp8/Background.png" width="159" />
        <splash height="1280" platform="wp8" src="www/res/screen/wp8/screen-portrait.jpg" width="768" />
    </platform>
    <platform name="windows">
        <icon height="44" platform="windows" src="www/res/icon/windows/Square44x44Logo.scale-100.png" width="44" />
        <splash height="300" platform="windows" src="www/res/screen/windows/SplashScreen.scale-100.png" width="620" />
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application" xmlns:android="http://schemas.android.com/apk/res/android">
            <application android:usesCleartextTraffic="true" />
        </edit-config>
        <!--<config-file target="app/src/main/AndroidManifest.xml" parent="/*" mode="merge">-->
            <!--<uses-permission android:name="android.permission.CAMERA" />-->
            <!--<uses-feature android:name="android.hardware.camera" />-->
            <!--<uses-feature android:name="android.hardware.camera.autofocus" />-->
        <!--</config-file>-->
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
            <string>This app requires camera access to scan barcodes.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
            <string>This app requires location access to find stores nearby.</string>
        </edit-config>
    </platform>
</widget>
